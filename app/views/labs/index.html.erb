<% if current_user.admin? %>
  <%= link_to 'New Lab', new_lab_path %>
<% end %>

<h1>Listing Labs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>College</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labs.each do |lab| %>
      <tr>
        <td><%= link_to lab.name, lab %></td>
        <td><%= lab.college %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Show', lab %></td>
          <td><%= link_to 'Edit', edit_lab_path(lab) %></td>
          <td><%= link_to 'Destroy', lab, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

